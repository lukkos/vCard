        <h1>Companies</h1>
        <p class="lead blue">Click to show details.</p>
        
        {% raw %}
            
            <div style="display:none">{{flash | json}}</div>
        
        <div ng-show="flash.message" class="alert alert-{{flash.status}}" ><span class="glyphicon glyphicon-{{flash.icon}}"></span>&nbsp; {{flash.message}}</div>
        
        <div class="list-group">
            
            <a href="" ng-click="open(CompaniesList.0.item.id)" class="list-group-item" ng-show="CompaniesList.0">{{CompaniesList.0.item.name}} {{CompaniesList.0.item.address}}</a>
            <a href="" ng-click="open(CompaniesList.1.item.id)" class="list-group-item" ng-show="CompaniesList.1">{{CompaniesList.1.item.name}} {{CompaniesList.1.item.address}}</a>
            <a href="" ng-click="open(CompaniesList.2.item.id)" class="list-group-item" ng-show="CompaniesList.2">{{CompaniesList.2.item.name}} {{CompaniesList.2.item.address}}</a>
            <a href="" ng-click="open(CompaniesList.3.item.id)" class="list-group-item" ng-show="CompaniesList.3">{{CompaniesList.3.item.name}} {{CompaniesList.3.item.address}}</a>
            <a href="" ng-click="open(CompaniesList.4.item.id)" class="list-group-item" ng-show="CompaniesList.4">{{CompaniesList.4.item.name}} {{CompaniesList.4.item.address}}</a>
            
        </div>
        
        <ul class="pagination pagination-sm">
            <li><a href="" ng-click="Pagination(CompaniesList.0.params,'prev')">&laquo;</a></li>
            <li ng-repeat="n in range(1,CompaniesList.0.params.pageCount)"  ng-class="{active: n==CompaniesList.0.params.current}" ><a ng-click="Pagination(CompaniesList.0.params,n)" href="">{{n}} <span class="sr-only">(current)</span></a></li>
            <li><a ng-click="Pagination(CompaniesList.0.params,'next')" href="">&raquo;</a></li>
        </ul>
        
        {% endraw %}